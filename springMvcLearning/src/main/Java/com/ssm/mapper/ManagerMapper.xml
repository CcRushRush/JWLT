<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.mapper.ManagerMapper">
    <resultMap type="com.ssm.pojo.Manager" id="managerMap">
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
    </resultMap>
    <!-- ==================定义sql片段==============
    sql:是sql片段标签属性id是该片段的唯一标识 -->
    <sql id="managerMessage">
        name,password,gender,age
    </sql>
    <!-- 增删改查标签里的id:一定要和接口里对应的方法名一致，
         resultMap输出类型里写映射标签里的id
         parameterType：输入类型，规范输入数据类型，指明查询时使用的参数类型-->
    <!-- 验证登录 -->
    <select id="login" resultMap="managerMap" parameterType="java.lang.String">
        <!-- 用include标签引入sql片段，refid写定义sql片段的id，where标签不要写在片段里 -->
        select <include refid="managerMessage"/> from manager
        <where>
            name=#{name}
        </where>
    </select>

    <!-- 查询用户列表 -->
    <select id="getManagerList" resultMap="managerMap">
        <!-- 用include标签引入sql片段，refid写定义sql片段的id，where标签不要写在片段里 -->
        select <include refid="managerMessage"/> from manager
    </select>

    <!-- 查询修改用户信息的id -->
    <select id="searchUpdateManagerFromName" resultMap="managerMap" parameterType="java.lang.String">
        <!-- 用include标签引入sql片段，refid写定义sql片段的id，where标签不要写在片段里 -->
        select <include refid="managerMessage"/> from manager
        <where>name=#{name}</where>
    </select>

    <!-- 修改用户信息 -->
    <update id="updateManagerFromName" parameterType="com.ssm.pojo.Manager">
         update manager
         set name=#{name},password=#{password},gender=#{gender},
             age=#{age}
         where name=#{name}
     </update>

    <!-- 添加用户信息 -->
    <insert id="insertManager" parameterType="com.ssm.pojo.Manager">
        insert into manager(<include refid="managerMessage"/>)
        values
        (#{name},#{password},#{gender},#{age}
    </insert>

    <!-- 增删改查标签里的id:一定要和接口里对应的方法名一致 -->
    <delete id="deleteManagerFromName" parameterType="com.ssm.pojo.Manager">
        delete from manager where name=#{name}
    </delete>

</mapper>